<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    android:id="@+id/main_fragment_layout">
    <!-- 상단 앱바 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            tools:ignore="RelativeOverlap" />

        <!-- 설정 아이콘 자리 (ImageView → View) -->
        <ImageButton
            android:id="@+id/settings_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="TODO"
            android:src="@drawable/gear_solid"/>
    </RelativeLayout>

    <!-- 섹션 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강 조회"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp"/>

    <!-- 카드 3개 -->
    <!-- (내용 동일, 생략 없이 유지) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="16dp">

        <!-- 심박수 카드 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="심박수"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textHeartRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 체온 카드 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp"
            android:layout_marginEnd="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체온"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15°C"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 수면 시간 카드 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/card_bg"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수면 시간"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSleepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5hour"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 심박수 그래프 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate_graph_title"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- 빈 그래프 영역 (ImageView → View) -->
        <View
            android:id="@+id/heartRateGraphPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"/>
    </LinearLayout>

    <!-- 버튼들 -->
    <Button
        android:id="@+id/ai_sleep_environment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수면 증상 상담 AI"
        android:textAllCaps="false"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_outline"
        android:textColor="#000000" />

    <Button
        android:id="@+id/walk_time_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="산책 시간 설정"
        android:textAllCaps="false"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_outline"
        android:textColor="#000000" />

</LinearLayout>