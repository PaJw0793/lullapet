<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ws_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WearableStatusFragment">

    <!-- 상단 바 (뒤로가기, 타이틀, 설정) -->
    <ImageButton
        android:id="@+id/ws_backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/ws_titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="웨어러블 상태 보기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ws_backButton"
        app:layout_constraintEnd_toStartOf="@id/ws_settingsButton"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginTop="16dp"/>

    <ImageButton
        android:id="@+id/ws_settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_settings_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <!-- 강아지1 버튼 -->
    <Button
        android:id="@+id/ws_dog1Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="강아지1의 웨어러블 상태 보기"
        android:drawableStart="@drawable/ic_dog_face"
        android:drawablePadding="8dp"
        android:background="@drawable/button_outline_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/ws_titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- 강아지2 버튼 -->
    <Button
        android:id="@+id/ws_dog2Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="강아지2의 웨어러블 상태 보기"
        android:drawableStart="@drawable/ic_dog_face"
        android:drawablePadding="8dp"
        android:background="@drawable/button_outline_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/ws_dog1Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- 고양이 버튼 -->
    <Button
        android:id="@+id/ws_catButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="고양이의 웨어러블 상태 보기"
        android:drawableStart="@drawable/ic_cat_face"
        android:drawablePadding="8dp"
        android:background="@drawable/button_outline_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/ws_dog2Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
